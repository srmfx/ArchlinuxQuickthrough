			    ATTRS{bcdDevice}=="3000"
			    ATTRS{bmAttributes}=="a0"
			    ATTRS{busnum}=="2"
			    ATTRS{configuration}=="RQR30.00_B0009"
			    ATTRS{devnum}=="12"
			    ATTRS{devpath}=="1.2"
			    ATTRS{idProduct}=="c52f"
			    ATTRS{idVendor}=="046d"
			    ATTRS{ltm_capable}=="no"
